<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/movies-single.css" />
    <title>{{title}}</title>
  </head>
  <body>
    <h2> {{poster}} {{title}} {{year}}<br>
      {{rating}} {{genres}}</h2>
    
    <form action="/movies/{{id}}/update" method="post">
      <input type="text" name="title" placeholder="Title" value="{{title}}"><br>
      <input type="text" name="year" placeholder="Year" value="{{year}}"><br>
      <input type="text" name="rating" placeholder="Rating" value="{{rating}}"><br>
      <input type="text" name="genres" placeholder="Genres" value="{{genres}}"><br>
      <input type="text" name="poster" placeholder="Poster URL" value="{{poster}}"> <br>
      <input type="submit" value="Save">
    </form>
    
    <form action="/movies/{{id}}/delete" method="post">
      <input type="submit" value="Delete">
    
    </form>
    
  </body>
</html>